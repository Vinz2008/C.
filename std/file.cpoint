include capi.hpoint
include libc.hpoint

mod file {

func open(path : i8 ptr) int {
    var mode : int = S_IRWXU
    var o_wronly : int = O_WRONLY
    var o_creat : int = O_CREAT
    open(path, o_wronly | o_creat, mode)
}

func write(fd : int, buf : i8 ptr) int {
    cwritefile(fd, buf)
}

func close(fd : int){
    close(fd)
}

}