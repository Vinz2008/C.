include libc.hpoint

?[if OS == linux]
extern get_nprocs() int;
?[endif]

mod system {
    func open_url(url : i8 ptr) void {
        var len = strlen(url) + 10
        var cmd : i8 ptr = gc_malloc(sizeof i8 * len)
        var open_cmd : i8 ptr = " " 
?[if OS == linux]
        open_cmd = "xdg-open "
?[endif]
?[if OS == darwin]  
        open_cmd = "open "
?[endif]
?[if OS == windows] 
        open_cmd = "start "
?[endif]
        strncpy(cmd, open_cmd, strlen(open_cmd))
        strcat(cmd, url)
        system(cmd)
    }
    func open_browser() void {
        system::open_url("https://github.com/Vinz2008/C.")
    }
    func get_processor_nb() int {
    0
?[if OS == linux]
    get_nprocs()
?[endif]
?[if OS == windows or OS == darwin]  
    0
?[endif]
    }
}